#!/bin/sh

set -e

case "${1}" in
    configure)
        if ! getent passwd xtreemfs > /dev/null 2>&1; then
            adduser --quiet --system --group --disabled-login --no-create-home --home /var/lib/xtreemfs xtreemfs
        fi
        chown xtreemfs:xtreemfs /var/lib/xtreemfs
    ;;
esac

